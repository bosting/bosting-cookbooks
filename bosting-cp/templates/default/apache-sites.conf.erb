<IfModule rpaf_module>
  RPAF_Enable on
  RPAF_SetHostName on
  RPAF_ProxyIPs 127.0.0.1
</IfModule>

Alias /phpmyadmin/ "<%= @www_path %>/phpMyAdmin/"
<Directory "<%= @www_path %>/phpMyAdmin/">
  Options None
  AllowOverride Limit
  Require all granted
</Directory>

Alias /phppgadmin/ "<%= @www_path %>/phpPgAdmin/"
<Directory "<%= @www_path %>/phpPgAdmin/">
  Options None
  AllowOverride Limit
  Require all granted
</Directory>

Alias /roundcube/ "<%= @www_path %>/roundcube/"
